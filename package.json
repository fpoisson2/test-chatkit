{
  "name": "chatkit-root",
  "private": true,
  "scripts": {
    "frontend:install": "npm install --prefix frontend",
    "frontend:dev": "npm run --prefix frontend dev",
    "frontend:build": "npm run --prefix frontend build",
    "frontend:preview": "npm run --prefix frontend preview",
    "backend:sync": "python3 -m pip install -r backend/requirements.txt",
    "backend:dev": "python3 -m uvicorn server:app --reload --app-dir backend",
    "backend:test": "python3 -m pytest backend/tests",
    "backend:lint": "python3 -m ruff check backend",
    "backend:format": "python3 -m isort backend && python3 -m black backend",
    "backend:mypy": "(cd backend && python3 -m mypy)",
    "diagnostic:env": "node scripts/check-env.js"
  }
}
